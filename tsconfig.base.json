{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "target": "es2019",
        "module": "esnext",
        "lib": ["es2019", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@thxnetwork/widget": ["apps/widget/src*"],
            "@thxnetwork/common": ["libs/common/src/index.ts"],
            "@thxnetwork/mixpanel": ["libs/common/src/lib/mixpanel.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
