{
    "name": "app",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/app/src",
    "projectType": "application",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/vite:build",
            "options": {
                "outputPath": "dist/apps/app"
            }
        },
        "serve": {
            "executor": "@nx/vite:dev-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "app:build",
                "port": 8080,
                "fs": {
                    "allow": [".."]
                }
            },
            "configurations": {}
        },
        "lambda-zip": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "rm AppDev-ModifyResponse.zip",
                    "zip -r AppDev-ModifyResponse.zip .",
                    "aws lambda update-function-code --function-name AppDev-ModifyResponse --region us-east-1 --zip-file fileb://AppDev-ModifyResponse.zip",
                    "aws lambda publish-version --function-name AppDev-ModifyResponse --region us-east-1"
                ],
                "cwd": "apps/app/src/lambda/AppDev-ModifyResponse"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"]
        },
        "test": {
            "executor": "@nxext/vitest:vitest",
            "options": {
                "vitestConfig": "apps/app/vitest.config.ts"
            }
        }
    }
}
